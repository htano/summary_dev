<% if @current_tab == "main" %>
  $(".main>a>div").css("background-color", "#ddd").unwrap();
  <% render_page_ejection = render_page_ejection(@mpage, @main_articles_table, :mpage, @total_main_articles_num) %>
  $(".main>.page-ejection").children().remove();
  $(".main>.page-ejection").html("<%= escape_javascript(render_page_ejection)%>");
  <% page_position = get_page_position(@mpage, @main_articles_table, @total_main_articles_num) %>
  $(".main>.page_info").html("<%= raw page_position %>");
  $("#main-check-all").attr("checked", false);
  <% render_main_table = render_article_table('main', @main_articles_table) %>
  $(".main-table .table-top").nextAll().remove();
  $(".main-table tbody").append("<%= escape_javascript(render_main_table) %>");
