              {:action => 'follow', :follow_user_id => @user_id, :remote => true}, 
              {:id => 'follow-button', :class => 'button button-rounded button-flat-primary'} %>
$('#follow-toggle').html("<%= raw(escape_javascript(follow))  %>")
$('#followers-num').html("<%= raw @follower_num %>")
$("#follower-id-<%= @current_user.id %>").remove()
