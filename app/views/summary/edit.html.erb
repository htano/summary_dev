<form method="POST" action="edit_complete">
  <div id="main">
    <table class="edit_table" id="main" align="center">
      <tr class="table_top">
        <th id="article_title_top">TITLE</th>
        <th id="summary_number_top">summary</th>
      </tr>
      <tr>
        <th class="title"><a href="<%= @url %>" target="_blank"><%= @title %></a></th>
        <th class="num_column"><%= link_to @summary_num , {:controller => "summary_lists", :action => "index", :articleId => @article_id} %></th>
      </tr>
      <tr class="table_top">
        <th id="article_title_top">content</th>
        <th id="summary_number_top">characters</th>
      </tr>
      <tr>
        <th><textarea class="content" id="content" name="content" onfocus="clearContent()" onKeyUp="countContentCharacters()"><%= @content %></textarea></th>
        <th><span id="count" class="count"><%= @content_num %></span></th>
      </tr>
      <tr>
        <th>
          <input type="button" id="edit" class="button button-flat:hover" value="Edit" onclick="clickEditButton()"></input>
          <input type="button" id="clear" class="button button-flat:hover" value="Clear" onclick="clickClearButton()"></input>
          <input type="submit" id="submit" class="button button-flat:hover" value="Submit" disabled="true"></input>
          <input type="button" id="back" class="button button-flat:hover" value="Back" onclick="clickBackButton()" disabled="true"></input>
        </th>
        <th>
          <a href="/summary_help.html" target="_blank"><%= image_tag"icons/glyphicons_194_circle_question_mark.png" %></a>
        </th>
      </tr>
    </table>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" id="firstEditFlag" value="<%= @firstEditFlag %>">
  </div>
</form>