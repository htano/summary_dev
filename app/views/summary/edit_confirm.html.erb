<script>
$(function(){
  $('#submit_button').click(function(){
    return confirm('こちらの要約で確定しますか？');
  });
});
</script>
  <form method="POST" action="edit_complete">
    <div class="center">
      <p> [title]: <%= @title %> </p>
      <p>[url]<a href="<%= @url %>" target="_blank"> <%= @url %></a></p>
      <p>[要約] <%= simple_format_2(@summary_content) %></p>
      <input type="submit" id="submit_button" class="button button-flat:hover" value="確定">
      <input type="hidden" name="summary_content" value="<%= @summary_content %>">
  </div>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
</form>
