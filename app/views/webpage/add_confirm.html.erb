<% content_for :head do %>
  <%= stylesheet_link_tag "webpage" %>
<% end %>

<div class="comment_box">Confirm.</div>
<div class="url_box">
  <form method="POST" action="add_complete" class="confirm_url">
    <p class="url_title"><%= @title[0, 100] %></p>
    <p class="url_link"><%= image_tag "http://favicon.hatena.ne.jp/?url=" + @url %><a href="<%= @url %>"target="_blank"><%= @url[0, 100] %></a></p>
    <div id="summary_num">
      <% if @summary_num == nil || @summary_num == 0 then %>
        0 summary
      <% else %>
        <%= link_to @summary_num, {:controller => "summary_lists", :action => "index", :article_id => @article_id} %>&nbsp;summaries
      <% end %>
    </div>
    <div id="tag_area">
      <% if @top_rated_tags == nil || @top_rated_tags.length == 0 %>
        <div id="recommend_tags">No one tags for this article.<br><br></div>
      <% else %>
        <div id="recommend_tags">recommend tags for this article.<br><br>
          <% @top_rated_tags.each do |recommend_tag| %>
            <label><span class="recommend_tag" onclick="clickRecommendTag('<%= recommend_tag %>')" id="recommend_tag_<%= recommend_tag %>"><%= recommend_tag %></span></label>
          <% end %>
        </div>
      <% end %>

      <% if @recent_tags == nil || @recent_tags.length == 0 %>
        <div id="recent_tags">you used no tags.<br><br></div>
      <% else %>
        <div id="recent_tags">recent tags.<br><br>
          <% @recent_tags.each do |recent_tag| %>
            <label><span class="recent_tag" onclick="clickRecentTag('<%= recent_tag %>')" id="recent_tag_<%= recent_tag %>"><%= recent_tag %></span></label>
          <% end %>
        </div>
      <% end %>


      <div id="my_tags">tags for this article. <%= image_tag("icons/glyphicons_016_bin.png", :size => "12x12", :id => "tag_clear") %><br>
        <% for num in 1..10 do %>
          <input type="text" class="tag_text" name="tag_text_<%= num %>" id="tag_text_<%= num %>" maxlength="10">
        <% end %>
      </div>
    </div>
    <div id="submit_area">
      <input type="submit" id="submit" value="add" class="button button-flat:hover submit" onclick="ckick_submit_button">
    </div>
      <input type="hidden" name="url" value="<%= @url %>">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  </form>
</div>
