<% end %> 

<div class="row">
  <div class="col-md-12 hotentry-container">
    <div class="row">
      <div class="col-md-12 hotentry-menu">
        <div class="row">
          <div class="col-md-7">
            <h3>Hot Entry</h3>
          </div>
          <div class="col-md-3">
            <input type="checkbox" id="only_summarized" style="font-size: 16px;">
              Summarized only. 
            </input>
          </div>
          <div class="col-md-2">
            <a href="<%= url_for(:controller => 'hotentry', :action => 'small') %>">
              <% if controller.action_name == 'small' %>
                <%= image_tag("icons/small_listing_selected.png", :size=>"24x24") %>
              <% else %>
                <%= image_tag("icons/small_listing.png", :size=>"24x24") %>
              <% end %>
            </a>
            <a href="<%= url_for(:controller => 'hotentry', :action => 'normal') %>">
              <% if controller.action_name == 'normal' %>
                <%= image_tag("icons/normal_listing_selected.png", :size=>"24x24") %>
              <% else %>
                <%= image_tag("icons/normal_listing.png", :size=>"24x24") %>
              <% end %>
            </a>
            <a href="<%= url_for(:controller => 'hotentry', :action => 'large') %>">
              <% if controller.action_name == 'large' %>
                <%= image_tag("icons/large_listing_selected.png", :size=>"24x24") %>
              <% else %>
                <%= image_tag("icons/large_listing.png", :size=>"24x24") %>
              <% end %>
            </a>
          </div>
        </div>
      </div>
    </div>

  <% @entries.each do |e| %>
    <div class="row">
    <% if e.get_top_rated_summary %>
      <div class="col-md-12 hotentry-row hotentry-row-with-summary">
    <% else %>
      <div class="col-md-12 hotentry-row hotentry-row-no-summary">
    <% end %>
        <div class="row hotentry-normal-body">
          <div class="col-md-2 hotentry-normal-image">
            <%= image_tag(e.thumbnail, :width=>"100%", :style=>"max-width:100px;") %>
          </div>
          <div class="col-md-10">
            <div class="row">
              <div class="col-md-12 hotentry-normal-title">
                <a href="<%= e.url %>" target="_blank">
                  <h5><%=e.title%></h5>
                </a>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 hotentry-normal-summaries">
                <%= e.user_articles.count %> readers,
                <a href="<%= url_for(:controller => 'summary_lists',
                                     :action=>'index',
                                     :articleId => e.id) %>">
                  <%= e.summaries.count %> summaries.
                </a>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12 hotentry-normal-contents">
                <p style="font-size:9px;">
                  <% if e.get_top_rated_summary %>
                    <%= e.get_top_rated_summary.content %>
                  <% else %>
                    <%= e.get_contents_preview %>
                  <% end %>
                </p>
              </div>
            </div>
          </div>
        </div>
        <div class="row hotentry-normal-bottom">
          <div class="col-md-6 hotentry-normal-domain">
            <%= image_tag "http://favicon.hatena.ne.jp/?url=" + e.url %>
            <%= URI(e.url).host %>
          </div>
          <div class="col-md-6 hotentry-normal-tags">
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
