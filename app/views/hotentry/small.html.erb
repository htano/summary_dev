<% content_for :head do %>
  ã€€<%= stylesheet_link_tag("hotentry", 
                            "bootstrap/bootstrap.css") %>
<meta name="keywords" content="<%=t('hotentry.meta_keywords')%>" xml:lang="ja" lang="ja" />
<meta name="description" content="<%=t('hotentry.meta_description')%>"/>
<% end %> 

<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12 hotentry-container">
    <div class="row">
      <div class="hidden-xs hidden-sm col-md-2">
        <%= render(:partial => "hotentry/partials/hotentrytab") %>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-10">
        <%= render :partial => "hotentry/partials/hotentrymenu" %>
      <% @entries.each do |e| %>
        <div class="row">
        <% if e.get_top_rated_summary %>
          <% if e.has_good_summary? %>
            <div class="col-xs-12 col-sm-12 col-md-12 hotentry-small-row hotentry-row-with-good-summary">
          <% else %>
            <div class="col-xs-12 col-sm-12 col-md-12 hotentry-small-row hotentry-row-with-summary">
          <% end %>
        <% else %>
          <div class="col-xs-12 col-sm-12 col-md-12 hotentry-small-row hotentry-row-no-summary">
        <% end %>
            <div class="row hotentry-small-body">
              <div class="hidden-xs hidden-sm col-md-1 hotentry-small-order">
                <%= @hash[e.id] %>.
              </div>
              <div class="col-xs-12 col-sm-12 col-md-11">
                <div class="row">
                  <div class="col-md-12 hotentry-small-title">
                    <a href="<%= url_for(
                      :controller => 'redirector',
                      :action => 'original_page',
                      :article_id => e.id
                    ) %>" target="_blank">
                      <h6><%=e.title%></h6>
                    </a>
                  </div>
                </div>
                <div class="row">
                  <div class="col-xs-12 col-sm-12 col-md-3 hotentry-small-summaries">
                    <% if e.user_articles_count %>
                      <%= e.user_articles_count %>
                    <% else %>
                      0
                    <% end %>
                    <% if e.user_articles_count != 1 %>
                      <%= t('reader.count') %>,
                    <% else %>
                      <%= t('reader.count_one') %>,
                    <% end %>
                    <a href="<%= url_for(
                      :controller => 'summary_lists',
                      :action=>'index',
                      :article_id => e.id
                    ) %>">
                      <% if e.summaries_count %>
                        <%= e.summaries_count %>
                      <% else %>
                        0
                      <% end %>
                      <% if e.summaries_count != 1 %>
                        <%= t('summary.count') %>.
                      <% else %>
                        <%= t('summary.count_one') %>.
                      <% end %>
                    </a>
                  </div>
                  <div class="col-xs-12 col-sm-12 col-md-5 hotentry-small-summaries">
                    <% if e.get_top_rated_summary %>
                      <%= link_to(t('summary.view_all'), 
                                  :controller => 'summary_lists',
                                  :action => 'index',
                                  :article_id => e.id) %>
                    <% else %>
                      <%= link_to(t('summary.edit'),
                                  :controller => 'summary',
                                  :action => 'edit',
                                  :article_id => e.id) %>
                    <% end %>
                  </div>
                  <div class="col-md-4 hotentry-normal-domain">
                    <a href="<%= url_for(
                      :controller => 'search',
                      :action => 'search_article',
                      :searchtext => URI(e.url).host,
                      :sort => '3',
                      :target => '1',
                      :type => '3'
                    ) %>">
                      <%= image_tag(
                        "http://favicon.hatena.ne.jp/?url=" + 
                        e.url
                      ) %>
                      <%= URI(e.url).host %>
                    </a>
                  </div>
                </div>
              </div> 
            </div>
          </div>
        </div>
      <% end %>
      <%= paginate(@entries) %>
      </div>
      <div class="visible-xs visible-sm col-xs-12 col-sm-12">
        <%= render(:partial => "hotentry/partials/hotentrytab") %>
      </div>
    </div>
  </div>
</div>
