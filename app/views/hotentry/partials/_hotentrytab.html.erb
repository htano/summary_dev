<div class="hotentry-tab">
  <ul>

    <li>
    <% if @category_name == 'personal' %>
      <%= link_to(t('category.personal'),
                  {:action => "index"}, 
                   :class => 'selected') %>
    <% else %>
      <%= link_to(t('category.personal'),
                  {:action => "index"}) %>
    <% end %>
    </li>

    <li>
    <% if @category_name == 'all' %>
      <%= link_to(t('category.all'), 
                  {:action => "index",
                   :category => 'all'}, 
                   :class => 'selected') %>
    <% else %>
      <%= link_to(t('category.all'), 
                  {:action => "index",
                   :category => 'all'}) %>
    <% end %>
    </li>

    <% Category.all.each do |c| %>
      <li>
      <% if @category_name == c.name %>
        <%= link_to(t('category.' + c.name), 
                    {:action => "index", :category => c.name},
                    :class => 'selected') %>
      <% else %>
        <%= link_to(t('category.' + c.name), 
                    {:action => "index", :category => c.name}) %>
      <% end %>
      </li>
    <% end %>

  </ul>
</div>
