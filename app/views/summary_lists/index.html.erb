<div id="yBoxOutline">
	<div id ="yBox">
		<div id = "yArticle">
			<h1 id="yArticleName">
				<% if  @article != nil %>
					<%= @article.title %>	
				<% end %>
			</h1>
			<div id="yArticleLink">
				<% if  @article != nil %>
					<%= link_to("元記事を見る",@article.url) %>
				<% end %>

			</div>

			<% unless @summaryList.blank? %>
				<div id="youyaku">
					<% @summaryList.each do |summaryItem| %>
						<div id="yAuther">
							<%= summaryItem.user.name %>	
						</div>
						<h2 id="yArticleDetail">
							<%= summaryItem.summary.content %>	
						</h2>

						<div id ="yArticleIiyo">
							<% unless summaryItem.isGoodCompleted then %>
								<%= link_to image_tag("icons/good_summary.jpg", { :border => '0', :alt => 'いい要約だね！'}),{:action => "goodSummary",:summaryId =>summaryItem.summary.id, :articleId => @article.id} %>

							<% else %>
								<%= image_tag("icons/good_summary_cmp.jpg", { :border => '0', :alt => 'あなたは既にいい要約だねをしています'}) %>
							<% end %>
						</div>

						<div id ="yArticleIiyo">
							ただいまのいい要約だねの数は<%= summaryItem.summaryPoint %>です。 
						</div>

						<hr id = "yArticleLine">

					<% end %>

				<% else %>
					<!-- 建設中 -->
				<% end %>
				<div id="yLinkToOtherY">
					他の要約を見る
				</div>
			</div>
		</div>
	</div>
</div>
