<div id ="sumlist_layout">
	<table id ="summary_lists">
		<tr>
			<th id ="article_title" class ="main">
				<% if  @article != nil %>
					<%= link_to(@article.title,@article.url,:class => "summary_list_link") %>	
				<% end %>
			</th>
			<td id ="article_status" class ="status">
				<div id ="article_read_mark">
					<% unless @isReadArticle then %>

						<img id="check_bottun_icon" width="16" height="16" src="/assets/icons/glyphicons_153_unchecked.png">
						<%= link_to "unread",{:action => "isRead", :articleId => @article.id, :remote => true}, { :id => "read_link" }%>
					<% else %>

						<img id="check_bottun_icon" width="16" height="16" src="/assets/icons/glyphicons_152_check.png">
						<%= link_to "already read",{:action => "cancelIsRead", :articleId => @article.id, :remote => true}, { :id => "read_link" }%>
					<% end %>
				</div>

				<hr>

				<div id ="mark_article">
					<div id ="mark_user">
						mark users
						<%= @numOfMarkUsers %>
					</div>
				</div>
			</td>
		</tr> 


		<!-- ここで、自分我要約してればその結果、してなければ要約への導線をだす -->
		<tr>
			<td class="main"> あなたも要約をして、誰かの時間を節約しませんか？
			<td class="status">
		</tr>



		<!-- summary lists -->
		<% unless @summaryList.blank? %>
			<% @summaryList.each_with_index do |summaryItem,index| %>
				<tr>
					<td id="summary_detail" class ="main">	
						<%= simple_format_2(summaryItem.summary.content) %>	
					</td>
					<td id="summary_auther" class ="status">
						<%= link_to image_tag(summaryItem.user.prof_image, :size => "50x50", :title => summaryItem.user.name, :id =>"auther_photo"),
							{:controller => 'mypage',:action => "index", :name => summaryItem.user.name} %>
							<div id ="auther_name">
								<%= link_to summaryItem.user.name,
									{:controller => 'mypage',
										:action => "index", 
										:name => summaryItem.user.name} %>


										<div id="follow_mark">
											follow
										</div>

									</div>
						<div id="last_update_time">
							LastUpdate:<br><%= summaryItem.summary.updated_at.strftime("%Y/%m/%d %H:%M") %>
						</div>






									<hr>
									<% unless summaryItem.isGoodCompleted then %>
										<div id = "yetGoodSummary<%=index%>" class="iiyo">
											<%= link_to image_tag("icons/glyphicons_343_thumbs_up.png",
																  { :border => '0', 
																	  :alt => 'いい要約だね！', 
																	  :id => "bottun"}),

																	  {	:action => "goodSummary",
																		  :listIndex =>index,
																		  :summaryId =>summaryItem.summary.id, 
																		  :articleId => @article.id,
																		  :remote => true,
											} %>
											<div id="count">
												<%= summaryItem.summaryPoint %> 
											</div>
										</div>

										<div id = "alreadyGoodSummary<%=index%>" class="iiyo" style="display:none"	>
											<%= link_to image_tag("icons/glyphicons_343_thumbs_up_gray.png", 
																  { :border => '0', 
																	  :alt => 'あなたは既にいい要約だねをしています', :id => "cmpBottun"} ),
																	  {	:action => "cancelGoodSummary",
																		  :listIndex =>index,
																		  :summaryId =>summaryItem.summary.id, 
																		  :articleId => @article.id,
																		  :remote => true,
											} %>
											<div id="count">
												<%= summaryItem.summaryPoint + 1 %> 
											</div>
										</div>
									<% else %>
										<div id = "yetGoodSummary<%=index%>" class="iiyo" style="display:none">
											<%= link_to image_tag("icons/glyphicons_343_thumbs_up.png",
																  { :border => '0', :alt => 'いい要約だね！', :id => "bottun"}),
																  {	:action => "goodSummary",
																	  :listIndex =>index,
																	  :summaryId =>summaryItem.summary.id, 
																	  :articleId => @article.id,
																	  :remote => true,
											} %>
											<div id="count">
												<%= summaryItem.summaryPoint - 1%> 
											</div>
										</div>

										<div id = "alreadyGoodSummary<%=index%>" class="iiyo">
											<%= link_to image_tag("icons/glyphicons_343_thumbs_up_gray.png", 
																  { :border => '0', 
																	  :alt => 'あなたは既にいい要約だねをしています',:id => "cmpBottun"}),
																	  {	:action => "cancelGoodSummary",
																		  :listIndex =>index,
																		  :summaryId =>summaryItem.summary.id, 
																		  :articleId => @article.id,
																		  :remote => true,
											} %>
											<div id="count">
												<%= summaryItem.summaryPoint  %> 
											</div>
										</div>
									<% end %>


								<% end %>
							</td>
						</tr>
						<tr>
							<td>
								他の要約を見る
							</td>
							<td>
							</td>
						</tr>
					<% end %>
				</table>
			</div>
