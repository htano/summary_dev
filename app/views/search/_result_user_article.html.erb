<% if @user_num == 0 %>
  <div id="result_operation">
    <% if @article_title.length < 25 %>
      <span id="message"><%= @article_title %><%= t("search.result_user_article") %></span>
    <% else %>
      <span id="message"><%= @article_title[0,25] + "..." %><%= t("search.result_user_article") %></span>
    <% end %>
  </div>
<% else %>
  <div id="result_operation">
    <% if @article_title.length < 25 %>
      <span id="message"><%= @article_title %><%= t("search.result_user_article") %></span>
    <% else %>
      <span id="message"><%= @article_title[0,25] + "..." %><%= t("search.result_user_article") %></span>
    <% end %>
    <span id="sort">
      <div class="btn-group sort-split-btn">
        <button type="button" class="btn btn-sm btn-default dropdown-toggle" data-toggle="dropdown"><%= @sort_menu_title %><span class="caret"></span></button>
        <ul class="dropdown-menu">
          <li>
            <%= link_to t("search.sort_follower_num") ,{:controller =>"search", :action => "search_user_article", :searchtext => @searchtext, :target => @target, :sort => "1", :article_id => @article_id } %>
          </li>
          <li>
            <%= link_to t("search.sort_summary_num") ,{:controller =>"search", :action => "search_user_article", :searchtext => @searchtext, :target => @target, :sort => "2", :article_id => @article_id } %>
          </li>
        </ul>
      </div>
    </span>
  </div>
  <% @users.each do |user| %>
    <% if get_login_user && (user.id == get_login_user.id || get_login_user.favorite_users.exists?(:favorite_user_id => user.id)) %>
      <div class="user_contents_follow">
    <% else %>
      <div class="user_contents_not_follow">
    <% end %>
        <div id="user_prof_image">
          <%= link_to image_tag(user.prof_image) ,{:controller =>"mypage", :action => "index", :name => user.name }%>
        </div>
        <div id="user_name">
          <%= link_to user.name ,{:controller =>"mypage", :action => "index", :name => user.name }%>
        </div>
        <div id="user_full_name">
          <%= user.full_name %>
        </div>
        <div id="user_mail_addr">
        　　<% if user.mail_addr  %>
            <%= link_to user.mail_addr, "mailto:"+user.mail_addr %>
          <% end %>
        </div>
        <div id="user_site">
          <%= user.site_url %>
        </div>
        <div id="user_info">
          <%= t("follow.follower_num") %>：<%= user.get_followers_count %>
          <%= t("summary.summary_num") %>：<%= user.summaries.count %>
        </div>
        <% if get_login_user && user.id != get_login_user.id %>
          <div id="follow-btn">
            <div id="follow-<%= user.id %>">
              <%= render_follow_status(user) %>
            </div>
          </div>
        <% end %>
      </div>
  <% end %>
  <span><%= paginate @users, :window =>4, :outer_window => 2  %></span>
<% end %>