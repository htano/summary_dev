<% if flash[:error] %>
  <div class='login_error'>
   <%= h(flash[:error]) %>
  </div>
<% end %>

<%= form_tag "/session/consumer/signup_complete" do %>
  ユーザ名(User Name)：
  <%= text_field_tag :creating_user_id %>
  </br>
  <% if params[:fromUrl] %>
    <input type="hidden" name="fromUrl" value="<%= params[:fromUrl] %>">
  <% end %>
  <% if params[:image] %>
    <input type="hidden" name="image" value="<%= params[:image] %>">
  <% end %>
  <%= submit_tag("アカウント登録(SignUp)") %>
<% end %>
