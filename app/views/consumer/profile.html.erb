<div class="setting_container">

  <div class="setting_navi">
    <h3>
      [id] <%= @uname %>
    </h3>
    <div class="setting_inner">
      <ul>
        <li>
          <a class="selected">Profile</a>
        </li>
        <li>
          <a>Emails</a>
        </li>
        <li>
          <a>Account Settings</a>
        </li>
      </ul>
    </div>
  </div>

  <div class="setting_contents">
    <h3>User Profile</h3>
    <div class="setting_inner">
      <dl>
        <dt>
          <label>UserId</label>
        </dt>
        <dd>
          <%= @uname %>
        </dd>
      </dl>

      <dl>
        <dt>
          <label>Mail Address</label>
        </dt>
        <dd>
          <%= @email %>
        </dd>
      </dl>

      <dl>
        <dt>
          <label>Profile Image</label>
        </dt>
        <dd>
          <%= image_tag(getLoginUser.prof_image, :size => "128x128") %>
        </dd>
      </dl>

      <a href="<%= url_for :action => 'profile_edit' %>">
        <button class="profile_btn">edit</button>
      </a>

    </div>
  </div>
</div>
