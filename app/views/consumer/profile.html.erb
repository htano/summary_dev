<h1>User Profile</h1>
<br>
<div class="profile_table">
<table border=1 CELLSPACING="0" CELLPADDING="0">
  <tr>
    <td> user name </td>
    <td> <%= @uname %> </td>
  </tr>
  <tr>
    <td> Mail Address </td>
    <td> <%= @email %> </td>
  </tr>
  <tr>
    <td> profile image </td>
    <td>
      <%= image_tag(getLoginUser.prof_image, :size => "64x64") %>
    </td>
  </tr>
</table>
</div>

<div class="profile_edit_link">
  <a href="<%= url_for :action => 'profile_edit' %>">
    <button>edit</button>
  </a>
</div>
